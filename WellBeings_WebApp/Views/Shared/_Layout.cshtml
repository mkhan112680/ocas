<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="body">
    <div class="navbar navbar-inverse navbar-fixed-top navbar-trans">
        <div class="row ">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/Images/logo.png" class="logo" />
            </div>
            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav responsive-menu">
                    <li>@Html.ActionLink("HOME", "Index", "Home", new { @class = "white-link home" })</li>
                    <li>@Html.ActionLink("PRODUCTS", "Products", "Home", new { @class = "white-link products" })</li>
                    <li>@Html.ActionLink("RETAILERS", "Retailers", "Home", new { @class = "white-link retailers" })</li>
                    <li>@Html.ActionLink("CONTACT US", "Contact", "Home", new { @class = "white-link contactus" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">
        <div class="" style="margin-top:100px">
            @RenderBody()
        </div>
    </div>
    <script>
        function SelectMenu(className) {
            $(".responsive-menu a").each(function () {
                $(this).removeClass("menu-selected");
            });
            $(".responsive-menu a." + className).addClass("menu-selected");
        }
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Html.Partial("_kendoScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
